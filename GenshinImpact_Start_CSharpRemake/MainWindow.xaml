<Window x:Class="GenshinImpact_Start_CSharpRemake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenshinImpact_Start_CSharpRemake"
        mc:Ignorable="d" Closing="MainWindow_OnClosing"
        Title="Genshin Impact Start - CSharp Remake" Height="100" Width="400">
    <StackPanel>
        <StackPanel Margin="10, 10, 0, 0" Orientation="Horizontal">
            <TextBlock Text="游戏进程状态: "></TextBlock>
            <TextBlock x:Name="GameProcessStatus" Text="获取中"></TextBlock>
        </StackPanel>
        <StackPanel Margin="10, 10, 0, 0" Orientation="Horizontal">
            <TextBlock Text="屏幕白色占比: "></TextBlock>
            <TextBlock x:Name="ScreenWhitePercentage" Text="获取中"></TextBlock>
        </StackPanel>
    </StackPanel>
</Window>
